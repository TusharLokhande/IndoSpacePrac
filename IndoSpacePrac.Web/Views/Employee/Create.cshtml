@model IndoSpacePrac.Web.Models.Employee.EmployeeModel

@{
    ViewBag.Title = "Create";
}

@Scripts.Render("~/Scripts/jquery")
<h3 class="heading">INSERT EMPLOYEE DETAILS</h3>

<div class="_container">
    <div class="main">
        @using (Html.BeginForm())
        {

            <div class="form-group">
                <label>Enter your Name</label>
                @Html.EditorFor(m => m.EName, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                <label>Enter your Email</label>
                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>


            <div class="form-group">
                <label>Select Date of Birth</label>
                @Html.EditorFor(m => m.DateOfBirth)
            </div>


            <div class="form-group">
                <label style="margin-right: 20px">Select Department</label>
                @Html.DropDownListFor(m => m.DepartmentId, new SelectList(Model.Departmentlist, "Value", "Text"), "Select Department", new { @class = "select" })
            </div>

            <div class="form-group">
                <label>Select ReportingManager</label>
                @Html.DropDownListFor(m => m.ReportingManagerId, new SelectList(Model.ReportingManagerList, "Value", "Text"), "Select Reporting Manager", new { @class = "select" })
            </div>

            <div class="_button" >
                <input type="submit" value="Insert" class="btn btn-primary" />
            </div>
            <div class="_button">
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}