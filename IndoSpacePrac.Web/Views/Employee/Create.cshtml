@model IndoSpacePrac.Web.Models.Employee.EmployeeModel

@{
    ViewBag.Title = "Create";
}
@Scripts.Render("~/Scripts/jquery")
<h2>Create</h2>


@using (Html.BeginForm())
{

    <div>
        <label>Enter your Name</label>
        @Html.EditorFor(m => m.EName)
    </div>

    <div>
        <label>Enter your Email</label>
        @Html.EditorFor(m => m.Email)
    </div>


    <div>
        <label>Select Date of Birth</label>
        @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @type = "date" } })
    </div>


    <div>
        <label>Select Department</label>
        @Html.DropDownListFor(m => m.DepartmentId, new SelectList(Model.Departmentlist, "Value", "Text"), "Select Department")
    </div>

    <div>
        <label>Select ReportingManager</label>
        @Html.DropDownListFor(m => m.ReportingManagerId, new SelectList(Model.ReportingManagerList, "Value", "Text"), "Select Reporting Manager")
    </div>

    <div>
        <input type="submit" value="Insert" />
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
